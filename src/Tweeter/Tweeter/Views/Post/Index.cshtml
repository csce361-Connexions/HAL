@model IEnumerable<Tweeter.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.postContent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            Text:
            @Html.DisplayFor(modelItem => item.postContent) <br>
            Number of likes:
            @Html.DisplayFor(modelItem => item.numLikes)<br>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Like", "Like", new { id = item.Id }) <br><br>
        </td>
    </tr>
}

</table>
